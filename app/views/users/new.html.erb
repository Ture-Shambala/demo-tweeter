<%= form_for @user, url: users_new_path do |f| %>
	<%#= f.error_messages %>
	<div class="form-group col-md-6 profile-image">
		<%= f.file_field :photo %>
	</div>
  <div class="form-group col-md-6">
    <%= f.label :User_Name %><br><%= f.text_field :name, :required => true, :class => "form-control", :placeholder => "Name"%>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :User_Address  %><br><%= f.text_field :address, :required => true, :class => "form-control", :placeholder => "Address"%>
  </div>
  <div class="form-group col-md-12">
    <%= button_tag 'Submit', :class=> "btn btn-primary pull-right" %>
  </div>
<% end %>